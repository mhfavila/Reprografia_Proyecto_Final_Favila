<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fondo"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondo"
        app:cardBackgroundColor="@color/fondo">

        <androidx.cardview.widget.CardView
            android:id="@+id/cont1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
           android:layout_margin="10dp"
            android:background="#C1DE56">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:background="#1B9006"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/idImagen"
                    android:layout_width="115dp"
                    android:layout_height="118dp"

                    android:layout_marginLeft="10dp"

                    android:src="@drawable/reprografia"></ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nombre"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"


                        android:background="@drawable/edittextredondeado1"
                        android:text="FORTNITE"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/precioFotocopias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:background="@drawable/edittextredondeado1"
                        android:gravity="center"
                        android:text="10$"
                        android:textAlignment="center"
                        android:textSize="15dp"></TextView>

                    <TextView
                        android:id="@+id/correo"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/edittextredondeado1"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="correo"
                        android:textAlignment="center" />

                    <Button
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:id="@+id/botonver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="5dp"

                        android:background="@drawable/button_redondo"
                        android:text="Enviar Archivo..."



                        android:textSize="15dp"></Button>

                </LinearLayout>





            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"

        android:layout_height="6dp"

        android:background="@color/purple_500" />

</LinearLayout>