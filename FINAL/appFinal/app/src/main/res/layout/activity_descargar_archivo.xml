<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".DescargarDocumento.DescargarArchivo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:clickable="true"
                app:srcCompat="?attr/actionModeCloseDrawable" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/likeImageView2"
                android:layout_width="274dp"
                android:layout_height="93dp"
                android:layout_gravity="center"

                ></com.airbnb.lottie.LottieAnimationView>

            <Button
                android:id="@+id/btnDownload"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_redondo"
                android:drawableRight="@drawable/ic_baseline_file_download_24"
                android:text="Descargar archivo"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <Button
                android:id="@+id/btnSaveFile"
                android:layout_width="347dp"

                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button_redondo"
                android:drawableRight="@drawable/ic_baseline_save_24"
                android:text="Guardar archivo"
                android:textColor="@color/white"

                android:textColorHint="@color/white"
                tools:visibility="visible" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/likeImageView1"
                android:layout_width="239dp"
                android:layout_height="191dp"
                android:layout_gravity="center"

                ></com.airbnb.lottie.LottieAnimationView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

